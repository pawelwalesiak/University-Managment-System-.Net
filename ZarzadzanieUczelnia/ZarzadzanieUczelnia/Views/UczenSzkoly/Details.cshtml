    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Uczen szkoly</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Grupa.Nazwa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Grupa.Nazwa)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Indeks)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Indeks)
